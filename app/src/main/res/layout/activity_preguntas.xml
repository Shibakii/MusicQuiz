<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/fondo_preguntas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/contadorTiempo"
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/txtTiempo"
                    android:layout_width="70sp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:textColor="@color/grisDesactivado"
                    android:text="25"
                    android:textSize="28sp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="10sp">

            <TextView
                android:gravity="center"
                android:background="@drawable/border_round"
                android:textColor="@color/black"
                android:id="@+id/lblPregunta"
                android:layout_width="800sp"
                android:layout_height="175sp"
                android:textAlignment="center"
                android:textSize="30sp"
                android:layout_marginBottom="7sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/opcion1"
                    android:layout_width="match_parent"
                    android:layout_height="62.5dp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/grisDesactivado"/>

                <ImageView
                    android:id="@+id/imgButton1"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/opcion2"
                    android:layout_width="match_parent"
                    android:layout_height="62.5dp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/grisDesactivado"/>

                <ImageView
                    android:id="@+id/imgButton2"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/opcion3"
                    android:layout_width="match_parent"
                    android:layout_height="62.5dp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/grisDesactivado"/>

                <ImageView
                    android:id="@+id/imgButton3"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/opcion4"
                    android:layout_width="match_parent"
                    android:layout_height="62.5dp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/grisDesactivado"/>

                <ImageView
                    android:id="@+id/imgButton4"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <Space
                android:layout_width="60dp"
                android:layout_height="50dp"/>
            <Button
                android:id="@+id/botonSiguiente"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="Siguiente pregunta"
                android:textColor="@color/black"
                android:backgroundTint="@color/grisDesactivado"/>

            <ImageView
                android:id="@+id/imgSiguiente"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>